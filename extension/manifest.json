{
  "manifest_version": 2,
  "name": "Ask ChatGPT",
  "version": "1.0.0",
  "description": "Firefox version of chrome gpt",
  "permissions": ["contextMenus", "activeTab","<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgptfirefox@ry.com"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
